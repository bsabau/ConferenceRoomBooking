@page  "{id:int?}"
@model ConferenceRoomBooking.Pages.Rezervations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert">×</a>
                <strong>Validation Errors</strong>
                @Html.ValidationSummary()
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationID" />
            <div class="form-group">
                <label asp-for="Reservation.UserID" class="control-label"></label>
                <select asp-for="Reservation.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Reservation.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.RoomID" class="control-label"></label>
                <select asp-for="Reservation.RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                <span asp-validation-for="Reservation.RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.StartTime" class="control-label"></label>
                <input asp-for="Reservation.StartTime" class="form-control" />
                <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.EndTime" class="control-label"></label>
                <input asp-for="Reservation.EndTime" class="form-control" />
                <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
